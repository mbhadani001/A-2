    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite movies List </h3>
          <br>


          <a href="/movies/add/" class="btn btn-primary" role="button">
            <i class="fa fa-plus"></i> Add a Movie</a>
            <br>
            <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Released</th>
                  <th class="text-center">Director</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>

                <!-- Template Row -->
                
                <% for (let count = 0; count < list.length; count++) { %>
                <tr>
                  <td>"<%= list[count].Title %>"</td>
                  <td class="text-center"><%= list[count].Description %></td>
                  <td class="text-center"><%= list[count].Released %></td>
                  <td class="text-center"><%= list[count].Director %></td>
                  <td class="text-center"><%= list[count].Genre %></td>

                  <td class="text-center">
                    <a href="/movies/edit/<%= list[count]._id %>" class="btn btn-primary btn-sm">
                      <i class="fas fa-pencil-alt"></i>Edit</a>
                  </td>

                  <td class="text-center">
                    <a href="/movies/delete/<%= list[count]._id %>" class="btn btn-danger btn-sm">
                      <i class="bi bi-trash-fill"></i>Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

